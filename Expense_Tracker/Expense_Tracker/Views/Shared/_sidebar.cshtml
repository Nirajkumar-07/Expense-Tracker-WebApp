@using Microsoft.AspNetCore.Identity
@using Expense_Tracker.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    List<Object> menuItems = new List<Object>();

    menuItems.Add(new
    {
        text = "General",
        separator = true
    });
    menuItems.Add(new
    {
        text = "Dashboard",
        iconCss = "fa-solid fa-box",
        url = "/dashboard"
    });
    menuItems.Add(new
    {
        text = "Categories",
        iconCss = "fa-solid fa-folder-closed",
        url = "/Category"
    });
    menuItems.Add(new
    {
        text = "Transactions",
        iconCss = "fa-solid fa-arrow-right-arrow-left",
        url = "/Transaction"
    });
    menuItems.Add(new
    {
        text = "Profile",
        separator = true
    });
}

<ejs-sidebar id="sidebar" width="290px" enableDock dockSize="100px" target=".dock-target" enableGestures="false">
    <e-content-template>
        <div class="logo-wrapper">
            <div class="app-logo">
                <img src="~/excash.png" class="excash" />
            </div>
            <div class="w-100"></div>
            <i id="siderbar-toggler" class="fa-solid"></i>
        </div>
        <div class="profile-wrapper">
            <img src="~/profile.png" class="profile-pic" />
            <div class="titles d-flex flex-column ps-3">
                <h6 class="mb-6">ExCash Tracker</h6>
                <span class="text-muted">@UserManager.GetUserName(User)</span>
            </div>
        </div>
        <ejs-menu id="menu" items="menuItems" orientation="Vertical" hamburgerMode></ejs-menu>
        <div>
        <partial name="_LoginPartial.cshtml" />
        </div>
    </e-content-template>
</ejs-sidebar>


<script>
    document.addEventListener('DOMContentLoaded', function () {
        dockBar = document.getElementById('sidebar').ej2_instances[0];
        document.getElementById('siderbar-toggler').onclick = function () {
            dockBar.toggle();
        };
    });
</script>
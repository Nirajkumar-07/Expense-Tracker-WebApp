@using Microsoft.AspNetCore.Identity
@using Expense_Tracker.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav" style="font-size:1rem; text-align:center;">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" style="background-color:gray; padding:5px;margin-left:1rem;width:100%;border-radius:5px;">Manage Account</a> <br />
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0" style="background-color:gray; padding:5px;margin-left:1rem;width:100%;border-radius:5px;">Logout</button>
        </form>
    </li>
}
else
{
}
</ul>
